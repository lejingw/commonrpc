<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-2.5.xsd
        http://www.springframework.org/schema/aop 
        http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
        http://www.springframework.org/schema/tx 
        http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
	<!--CommonRpc 管理客户端 -->
	<bean id="commonRpcManagerClient"
		class="com.cross.plateform.common.rpc.zk.manager.client.factory.CommonRpcManagerClientFactory">
		<property name="host" value="127.0.0.1:2181"></property>
		<property name="timeout" value="500"></property>
	</bean>
	
	<bean class="com.cross.plateform.common.rpc.zk.manager.client.util.SpringContextUtil" lazy-init="false"></bean>
</beans>
