<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:commonrpc="http://www.izhuan365.com/commonrpc"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.izhuan365.com/commonrpc
		http://www.izhuan365.com/commonrpc/commonrpc.xsd">

    <!--
        address：zookeeper 注册中心地址
        flag：标记是提供者(1)，还是消费者(2)
        timeout：zookeeper连接超时时间
    -->
    <commonrpc:application id="rpcRegistryApplication" address="127.0.0.1:2181" flag="1"
                           timeout="5000"></commonrpc:application>

    <!--
        port：对外提供服务访问的端口
        timeout：（netty连接用到，具体不知道干嘛的）
        procotolType：协议类型
        codecType：数据编码类型（JAVA_CODEC = 1,HESSIAN_CODEC = 2,PB_CODEC = 3,KRYO_CODEC = 4）
        group：服务所在的组
        threadCount：用于处理rpc请求的线程数
     -->
    <commonrpc:registry id="rpcRegistry" port="10010" timeout="200" procotolType="1" codecType="4" group="demo"
                        threadCount="200"></commonrpc:registry>

    <commonrpc:service id="IDemoService" interfacename="com.commonrpc.demo.sdk.DemoService" ref="demoService"
                       filterRef="demoRpcFilter"></commonrpc:service>


    <bean id="demoService" class="com.commonrpc.demo.provider.DemoServiceImpl"></bean>
    <bean id="demoRpcFilter" class="com.commonrpc.demo.rpcfilter.DemoRpcFilter"></bean>


</beans>
