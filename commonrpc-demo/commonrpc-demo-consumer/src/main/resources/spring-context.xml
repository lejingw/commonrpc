<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:commonrpc="http://www.izhuan365.com/commonrpc"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.1.xsd
        http://www.izhuan365.com/commonrpc
        http://www.izhuan365.com/commonrpc/commonrpc.xsd">

    <!--
        address：zookeeper 注册中心地址
        flag：标记是提供者(1)，还是消费者(2)
        timeout：zookeeper连接超时时间
    -->
    <commonrpc:application id="rpcRegistryApplicationClient" address="127.0.0.1:2181" flag="2"
                           timeout="200"></commonrpc:application>

    <!--
        interfacename：接口名称
        procotolType：协议类型
        codecType：数据编码类型（JAVA_CODEC = 1,HESSIAN_CODEC = 2,PB_CODEC = 3,KRYO_CODEC = 4）
        timeout：调用远程服务时，服务调用超时时间
        group：服务所在的组（可以同时支持多组，以符合,隔开）
     -->
    <commonrpc:reference id="demoService" interfacename="com.commonrpc.demo.sdk.DemoService" procotolType="1"
                         codecType="4" timeout="30000" group="demo"/>


</beans>
